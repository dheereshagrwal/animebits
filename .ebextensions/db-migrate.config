container_commands:
    01_migrate:
        command: "django-admin.py migrate"
        leader_only: true
    02_collectstatic:
        command: "django-admin.py collectstatic"
        leader_only: true
    03_createsuperuser:
        command: "echo 'from django.contrib.auth import get_user_model; User = get_user_model(); User.objects.filter(username='dheer').exists() or User.objects.create_superuser('dheer', 'admin@example.com', 'admin123')' | python manage.py shell"
        leader_only: true
option_settings:
    aws:elasticbeanstalk:application:environment:
        DJANGO_SETTINGS_MODULE: animer.settings